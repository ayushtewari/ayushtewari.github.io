        border-bottom: 1px solid #ccc;
    }

    .syllabus-table th {
        font-family: "Etbb", serif;
        font-variant: small-caps;
        font-size: 1.3rem;
        border-bottom: 2px solid var(--text-color, #eee);
    }

    .section-header td {
