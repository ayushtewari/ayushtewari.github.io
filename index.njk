        {% for talk in talks %}
        <p>
            <b>{{ talk.title }}</b>, <i>{{ talk.venue | safe}}</i>
            <span>{{ talk.data | safe }}</span>
        </p>
        {% endfor %}
    </section-->
{% endblock %}